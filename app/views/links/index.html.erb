<h3>Create a Link</h1>

<%= form_for :link do |f| %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.submit "Create Link" %>
<% end %>

<h3>All the Links</h1>

<% @links.each do |link| %>
  <div class="row" data-id="<%=link.id%>"
                   data-read="<%=link.read?%>"
                   id="link-<%=link.id%>">
    <ul class="col"><%= link.title %>
      <li>Url: <%= link.url %></li>
      <li class="read-status">Read? <%= link.read %></li>
    </ul>
    <button class="col read">Mark as Read</button>
    <button class="col unread">Mark as Unread</button>
  </div>
<% end %>
